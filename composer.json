{
    "name": "f-oris/easy-httpclient",
    "description": "an easy http client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require": {
        "php": ">7.1",
        "ext-json": "*",
        "ext-curl": "*",
        "psr/log": "~1.0",
        "guzzlehttp/guzzle": "~6.0|~7.0",
        "f-oris/easy-logger": "^1.0",
        "f-oris/easy-cache": "^1.0",
        "f-oris/easy-support": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "mockery/mockery": "^1.2",
        "fzaninotto/faker": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\HttpClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
