{
    "name": "f-oris/easy-httpclient",
    "description": "an easy http client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require": {
        "php": ">=5.5",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*",
        "psr/log": "~1.0",
        "guzzlehttp/guzzle": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0",
        "mockery/mockery": "^0.9|^1.0"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\HttpClient\\Tests\\": "tests/"
        }
    },
    "suggest": {
        "f-oris/easy-logger": "A simple http-client logger extension."
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
